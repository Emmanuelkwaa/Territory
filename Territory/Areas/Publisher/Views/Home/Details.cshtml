@using PublisherTerritory = Territory.Models.PublisherTerritory
@model PublisherTerritory
@{
    ViewData["Title"] = "Territory Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />
<br />
<br />
<form method="post">
    <input hidden asp-for="TerritoryId" />
    <div class="row">
        <div class="col-md-8 col-lg-6 offset-md-2 offset-lg-3">
            <div class="list-group">
                <div class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Name</h5>
                    </div>
                    <p class="mb-1">@Model.Territory.FirstName @Model.Territory.LastName</p>
                </div>
                <div class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Address</h5>
                    </div>
                    <p class="mb-1">@Model.Territory.Street @Model.Territory.Apartment</p>
                    <p class="mb-1">@Model.Territory.City @Model.Territory.State</p>
                    <p class="mb-1">@Model.Territory.Zipcode</p>
                </div>
                @if (Model.Territory.Comment != null)
                {
                    <div class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">Comment</h5>
                        </div>
                        <p class="mb-1">@Model.Territory.Comment</p>
                        <small class="text-muted">Comment by: @Model.Territory.CommentBy</small>
                    </div>
                }
                else
                {
                    <div id="commentsection" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">Comment</h5>
                        </div>
                        <p class="mb-1">No comment exist.</p>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12 text-center">
            <button class="btn btn-primary create-button" type="submit">Add To My Territory</button>
        </div>
    </div>
</form>