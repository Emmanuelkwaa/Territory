@using UserTerritoryListVM = Territory.Models.ViewModel.UserTerritoryListVM
@model UserTerritoryListVM
@{
    ViewData["Title"] = "User Territory List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
<br/>
<br/>
<br/>
<div class="container">
    @if (Model.PublisherTerritories.Any())
    {
        <h4><strong>@Model.ApplicationUsers.FirstName @Model.ApplicationUsers.LastName's Territory List</strong></h4>
    }
    
    <div class="row mt-3">
        @if (Model.PublisherTerritories.Any())
        {
            @foreach (var territory in Model.PublisherTerritories)
            {
                <div class="col-sm-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">
                                @if (territory.Territory.Title != null)
                                {
                                    <h5>@territory.Territory.Title @territory.Territory.FirstName @territory.Territory.LastName</h5>
                                }
                                else
                                {
                                    <h5>@territory.Territory.FirstName @territory.Territory.LastName</h5>
                                }
                            </div>
                            <p class="card-text m-0">@territory.Territory.Street @territory.Territory.Apartment</p>
                            <p class="card-text">@territory.Territory.City @territory.Territory.State @territory.Territory.Zipcode</p>
                            @if (territory.Territory.PhoneNumber != null)
                            {
                                <p>@territory.Territory.PhoneNumber</p>
                            }
                            else
                            {
                                <p>No phone number available</p>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="jumbotron" style="width: 100%">
                <div class="container">
                    <h1>@Model.ApplicationUsers.FirstName @Model.ApplicationUsers.LastName has not added any territory to their account</h1>
                </div>
            </div>
        }
    </div>
</div>
